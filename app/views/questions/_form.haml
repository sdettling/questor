= form_for(@question) do |f|
  - if @question.errors.any?
    #error_explanation
      %h2
        - pluralize(@question.errors.count, "error")
        prohibited this question from being saved:
      %ul
        - @question.errors.full_messages.each do |msg|
        %li
          = msg
        - end
  -end
  .field
    = f.label :query
    = f.text_area :query
  .field
    = f.label :min_selections
    = f.number_field :min_selections
  .field
    = f.label :max_selections
    = f.number_field :max_selections
  .field
    = f.label :ranked
    = f.check_box :ranked
  
  = f.fields_for :question_options do |builder|
    = render "question_option_fields", f: builder
  - end
  
  = link_to_add_fields "Add Option", f, :question_options

  .actions
    = f.submit

- end
